@using ContentModels = Umbraco.Web.PublishedContentModels;
@using Umbraco.Core
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Vista Docs</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="@Url.Content("~/assets/css/libs.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/base.css")" />

    @RenderSection("Header", required: false)
</head>
<body class="vista column-layout">
    <div class="column-layout">
        <div class="menu-column">
            @Html.Partial("~/views/partials/navigation/sideNavigation.cshtml")
        </div>
        <div class="centre-column">
            <header class="header"></header>
            <main>
                <h2>@Model.Content.Name</h2>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="@Url.Content("~/assets/scripts/libs.js")"></script>
    <script src="@Url.Content("~/assets/scripts/base.js")"></script>
</body>
</html>
